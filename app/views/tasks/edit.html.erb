<div class="border-bottom">
  <h1>Edit task</h1>
  <%= form_with model: @task do |f| %>
    <%= f.label :title %>
    <%= f.text_field :title %>
    <%= f.label :details %>
    <%= f.text_field :details %>
    <div id="completed">
      <%= f.check_box :completed %>
      <%= f.label :completed %>
    </div>
    <%= f.submit %>
  <% end %>
</div>
<%= link_to link_to raw("<i class='fa-solid fa-clock-rotate-left'></i> Back to list"), tasks_path %>
