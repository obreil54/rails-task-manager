<div class="border-bottom">
<h1>My tasks</h1>
<ul>
  <% @tasks.each do |task| %>
    <% if task.completed %>
      <li><input type="checkbox" checked><%= link_to task.title, task_path(task) %> • <%= link_to raw("<i class='fa-regular fa-trash-can'></i>"), task_path(task), data: {turbo_method: :delete, turbo_confirm: "Are you sure?"} %></li>
    <% else %>
      <li><input type="checkbox"><%= link_to task.title, task_path(task) %> • <%= link_to raw("<i class='fa-regular fa-trash-can'></i>"), task_path(task), data: {turbo_method: :delete, turbo_confirm: "Are you sure?"} %></li>
    <% end %>
  <% end %>
</ul>
</div>
<%= link_to raw("<i class='fa-solid fa-plus'></i> Add a new task"), new_path %>
